<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inputView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:hardwareAccelerated="true">
    <!--拼音标题栏view-->
    <LinearLayout
        android:id="@+id/sdk_pinyin_title_view_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.yuyan.imemodule.view.ComposingView
            android:id="@+id/cmv_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"/>
        <!--候选词视图，即 键盘顶部分的视图，分情况显示候选词，或者显示顶部操作栏-->
        <com.yuyan.imemodule.view.CandidatesBar
            android:id="@+id/candidates_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--键盘标题栏-->
            <include layout="@layout/sdk_skb_container_title_menu" />
        </com.yuyan.imemodule.view.CandidatesBar>

    </LinearLayout>
    <!--除顶部外的下面其他容器视图，当标点符号视图显示时会遮挡住此视图-->
    <com.yuyan.imemodule.view.keyboard.container.InputViewParent
        android:id="@+id/skb_input_keyboard_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sdk_pinyin_title_view_ll">
    </com.yuyan.imemodule.view.keyboard.container.InputViewParent>
</RelativeLayout>