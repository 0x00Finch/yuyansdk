<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true">
    <include
        android:id="@+id/ll_skb_holder_layout_left"
        layout="@layout/sdk_skb_holder_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/ll_input_keyboard_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ll_skb_holder_layout_left">
        <com.yuyan.imemodule.view.ComposingView
            android:id="@+id/cmv_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"/>
        <!--候选词视图，即 键盘顶部分的视图，分情况显示候选词，或者显示顶部操作栏-->
        <com.yuyan.imemodule.view.CandidatesBar
            android:id="@+id/candidates_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmv_container"/>
        <!--除顶部外的下面其他容器视图，当标点符号视图显示时会遮挡住此视图-->
        <com.yuyan.imemodule.view.keyboard.container.InputViewParent
            android:id="@+id/skb_input_keyboard_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/candidates_bar">
        </com.yuyan.imemodule.view.keyboard.container.InputViewParent>
    </RelativeLayout>
    <include
        android:id="@+id/ll_skb_holder_layout_right"
        layout="@layout/sdk_skb_holder_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ll_input_keyboard_container"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_keyboard_move"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sdk_vector_keyboard_horizontal_line"
        android:layout_below="@+id/ll_input_keyboard_container"
        tools:ignore="ContentDescription" />
</RelativeLayout>