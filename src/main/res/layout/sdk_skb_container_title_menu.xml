<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_candidates_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_container_menu_ime_setting"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:src="@drawable/app_icon"
        android:layout_marginStart="10dp"
        android:focusable="true"
        android:contentDescription="@string/setting_ime_sdk" />
    <ImageView
        android:id="@+id/iv_container_menu_close_grey"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:scaleType="centerInside"
        android:src="@drawable/sdk_skb_close_icon"
        android:layout_marginEnd="10dp"
        android:focusable="true"
        android:contentDescription="@string/keyboard_iv_menu_close" />
    <LinearLayout
        android:id="@+id/ll_container_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toEndOf="@id/iv_container_menu_ime_setting"
        android:layout_toStartOf="@id/iv_container_menu_close_grey" />
</RelativeLayout>
