<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_symbols_emoji_type_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_symbols_emoji_type_return"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back_24"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_symbols_emoji_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/iv_symbols_emoji_type_delete"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/sdk_skb_key_delete_icon"/>
</LinearLayout>